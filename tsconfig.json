{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "paths": {
      "@shadcn/*": ["components/shadCn/*"],
      "@common/*": ["components/common/*"],
      "@core/*": ["components/core/*"],
      "@layouts/*": ["components/layouts/*"],
      "@lib/*": ["utils/lib/*"],
      "@hooks/*": ["utils/hooks/*"],
      "@services/*": ["utils/services/*"],
      "@store/*": ["utils/store/*"],
      "@types/*": ["utils/types/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
